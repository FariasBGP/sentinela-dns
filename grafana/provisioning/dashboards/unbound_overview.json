{
  "title": "Sentinela-DNS · Unbound Overview",
  "uid": "sentinela-unbound",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "tags": ["sentinela-dns", "unbound", "prometheus"],
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "Unbound Target (up)",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        { "expr": "up{job=\"unbound\"}", "refId": "A" }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "colorMode": "value",
        "graphMode": "none",
        "orientation": "horizontal",
        "textMode": "value_and_name"
      }
    },
    {
      "type": "stat",
      "title": "Exporter OK (unbound_up)",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "targets": [
        { "expr": "unbound_up", "refId": "A" }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "colorMode": "value",
        "graphMode": "none",
        "orientation": "horizontal",
        "textMode": "value_and_name"
      }
    },
    {
      "type": "stat",
      "title": "Tempo de scrape (s)",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "targets": [
        { "expr": "max(scrape_duration_seconds{job=\"unbound\"})", "refId": "A" }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"]},
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Amostras por scrape",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
      "targets": [
        { "expr": "max(scrape_samples_post_metric_relabeling{job=\"unbound\"})", "refId": "A" }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"]},
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value"
      }
    },
    {
      "type": "timeseries",
      "title": "QPS (auto-detect)",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate({__name__=~\"unbound_.*(query|queries|request|requests).*_total\"}[5m]))"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "type": "timeseries",
      "title": "RCODEs (NxDomain, ServFail, etc)",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (rcode) (rate({__name__=~\"unbound_.*rcode.*_total\"}[5m]))"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "type": "timeseries",
      "title": "Latência média (se disponível)",
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "avg(rate({__name__=~\"unbound_.*response.*seconds_sum\"}[5m])) / avg(rate({__name__=~\"unbound_.*response.*seconds_count\"}[5m]))"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "type": "timeseries",
      "title": "Falhas do exporter/target",
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
      "targets": [
        { "expr": "1 - up{job=\"unbound\"}", "refId": "A" },
        { "expr": "absent(unbound_up)", "refId": "B" }
      ],
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    }
  ]
}
